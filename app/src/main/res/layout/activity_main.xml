<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema de Gestión de Seguridad"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de autenticación biométrica -->
    <Button
        android:id="@+id/btnAuthenticate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autenticarse"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para cifrar datos -->
    <Button
        android:id="@+id/btnEncryptData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cifrar Datos"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnAuthenticate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para ver logs -->
    <Button
        android:id="@+id/btnViewLogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Logs de Seguridad"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnEncryptData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto para mostrar los resultados -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultados aparecerán aquí..."
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnViewLogs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
